function sprowt_hd_uninstall() {
    if (db_table_exists('sprowt_hd_webform')) {
        db_drop_table('sprowt_hd_webform');
    }
    if (db_table_exists('sprowt_hd_webform_custom_fields')) {
        db_drop_table('sprowt_hd_webform_custom_fields');
    }
}