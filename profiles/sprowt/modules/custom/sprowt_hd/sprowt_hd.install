/**
 * Add tables if they don't exist
 */
function sprowt_hd_update_7000() {
    $schemas = sprowt_hd_schema();
    foreach($schemas as $table => $schema) {
        if(!db_table_exists($table)) {
            db_create_table($table, $schema);
        }
    }
}

function sprowt_hd_uninstall() {
