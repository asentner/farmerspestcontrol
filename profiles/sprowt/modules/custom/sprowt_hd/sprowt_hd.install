function sprowt_hd_schema() {
    $schema = [];
    $schema['sprowt_hd_webform'] = array(
        'fields' => array(
            'nid' => array(
                'type' => 'int',
                'unsigned' => true,
                'not null' => true,
                'default' => 0,
            ),
            'form_reactor_enabled' => array(
                'type' => 'int',
                'size' => 'tiny',
                'default' => 0,
